{% extends "base.twig" %}

{% block title %}Blog Home{% endblock %}
{% block head %}
{{ parent() }}
{% endblock %}

{% block content %}
{% if remove_notice is not empty %}
      <strong> {{ remove_notice|title }} </strong>
      <meta http-equiv="refresh" content="3; URL= /">
        {%- endif %}

{% if blurp is not empty %}
      <strong style="color:green;"> {{ blurp|title }} </strong>
     <meta http-equiv="refresh" content="3; URL= /">
        {%- endif %}

                      {% for item in entries %}
                        <article>
                        <h2><a href="/entry/{{ item.id }}" > {{ item.title }} </a></h2>
                        <time> {{ item.created_at | date("m-d-Y") }} </time>
                        </article>
                        {% endfor %}


{% endblock %}
