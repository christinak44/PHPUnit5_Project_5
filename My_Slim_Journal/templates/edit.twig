{% extends "base.twig" %}

{% block title %}Blog Home{% endblock %}
{% block head %}
{{ parent() }}
{% endblock %}
{% block content %}
        <section>
            <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form action = "/entry/edit/{{ details.id }}" method = "post">
                        <label for="title"> Title</label>
                        <input type="text" name="title" value= "{{ details.title }}" > <br>
                        <label for="entry">Entry</label>
                        <textarea rows="5" name="entry" >{{ details.body }}</textarea>
                        <input type="submit" value="Save Entry" class="button">
                        <a href="/entry/{{ details.id }}" class="button button-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </section>
{% endblock %}
